# =============================================================================
# DocAI Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in all values
# NEVER commit .env.production to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Database & Storage
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# -----------------------------------------------------------------------------
# Clerk Authentication
# Get these from: https://dashboard.clerk.com/
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk webhook secret (for user sync)
# Get from: Clerk Dashboard > Webhooks > Signing Secret
CLERK_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# AI Processing
# -----------------------------------------------------------------------------
# Gemini API Key (Primary) - https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API Key (Fallback) - https://platform.openai.com/api-keys
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Razorpay Payments
# Get these from: https://dashboard.razorpay.com/app/keys
# -----------------------------------------------------------------------------
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Razorpay webhook secret
RAZORPAY_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=https://docai.ifbd.info
NODE_ENV=production

# Optional: Enable production logging
ENABLE_PROD_LOGS=true
